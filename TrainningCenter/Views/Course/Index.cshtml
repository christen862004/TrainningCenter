@model List<CourseWithDepNameViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "_AdvLayout";
}

<h1>Index</h1>

<a asp-action="New" asp-controller="Course" class="btn btn-success">New</a>
<table class="table table-bordered table-hover">
    <tr>
        <th>ID</th>
        <th>New</th>
        <th>Department</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CourseId</td>
            <td>@item.CourseName</td>
            <td>@item.DeptName</td>
        </tr>
    }
</table>